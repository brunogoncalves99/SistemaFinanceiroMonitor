@model CotacaoViewModel
@{
    ViewData["Title"] = "Histórico de Cotações";
}

<h2 class="mb-4">
    <i class="fas fa-history text-success"></i> Histórico de Cotações
</h2>


<div class="row mb-4">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-filter"></i> Filtros</h5>
            </div>
            <div class="card-body">
                <form asp-action="Historico" method="get" class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Moeda</label>
                        <select name="tipoMoeda" class="form-select">
                            <option value="@((int)TipoMoeda.Dolar)" selected>Dólar (USD)</option>
                            <option value="@((int)TipoMoeda.Euro)">Euro (EUR)</option>
                            <option value="@((int)TipoMoeda.Libra)">Libra (GBP)</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Data Início</label>
                        <input type="date" name="dataInicio" class="form-control" value="@Model.DataInicio?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Data Fim</label>
                        <input type="date" name="dataFim" class="form-control" value="@Model.DataFim?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">&nbsp;</label>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-search"></i> Filtrar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Resultados -->
<div class="row">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">Resultados (@Model.Cotacoes.Count registros)</h5>
            </div>
            <div class="card-body">
                @if (Model.Cotacoes.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Data</th>
                                    <th>Compra</th>
                                    <th>Venda</th>
                                    <th>Médio</th>
                                    <th>Variação</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cotacao in Model.Cotacoes)
                                {
                                    <tr>
                                        <td>@cotacao.DataCotacao.ToString("dd/MM/yyyy")</td>
                                        <td>R$ @cotacao.ValorCompra.ToString("N4")</td>
                                        <td>R$ @cotacao.ValorVenda.ToString("N4")</td>
                                        <td>R$ @cotacao.ValorMedio.ToString("N4")</td>
                                        <td>
                                            @if (cotacao.VariacaoPercentual.HasValue)
                                            {
                                                var classe = cotacao.VariacaoPercentual >= 0 ? "text-success" : "text-danger";
                                                <span class="@classe">@cotacao.VariacaoFormatada</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> Nenhuma cotação encontrada para o período selecionado.
                    </div>
                }
            </div>
        </div>
    </div>
</div>